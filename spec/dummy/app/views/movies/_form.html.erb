<%= form_for @movie, html: { data: { validate_model: 'movie' } } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, data: { validate: true } %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, data: { validate: true } %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating, data: { validate: true } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
